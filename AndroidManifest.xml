<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danielkao.poweroff"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.danielkao.poweroff.MainActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.danielkao.poweroff.TurnOffReceiver"
            android:label="Turn off screen by S/W"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/deviceinfo" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.danielkao.poweroff.SensorMonitorService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="com.danielkao.poweroff.ToggleAutoOnOffActivity"
            android:label="@string/title_activity_toggle_auto_on_off" >
            <intent-filter>
                <action android:name="com.danielkao.poweroff.action.toggle" />
            </intent-filter>
        </activity>
    </application>

</manifest>